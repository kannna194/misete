.contents.row
  .content_post{:style => "background-image: url(#{post.image});"}
    .more
      %span= image_tag 'arrow_top.png'
      %ul.more_list
        %li
          = link_to '編集', edit_tweet_path(@post.id), method: :get
        %li
          = link_to '削除', tweet_path(@post.id), method: :delete
    %p= @post.text
    %span.name
      = @post.name